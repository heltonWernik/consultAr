<div class="panel panel-default">
	<div class="panel-heading">
		Seja um médico no consultAr e encha seu consultório
	</div>
	<div class="panel-body">
		<div class="container">
			
			<%= form_for @room, :html => { multipart: true } do |f| %>

				<div class="row">
					<div class="col-md-4 select">
						<div class="form-group">
							<label>Especialidade</label>
							<%= f.select :home_type, [["Acunputura","Acunputura"], ["Alergista","Alergista"], ["Anestesiologia","Anestesiologia"], ["Angiorradiologista","Angiorradiologista"]], id: "home_type", prompt: "Select...", class: "form-control" %>
						</div>
					</div>

					 <div class="col-md-4 select">
						<div class="form-group">
							<label>Especialidade adicional</label>
							<%= f.select :room_type, [["Acunputura","Acunputura"], ["Alergista","Alergista"], ["Anestesiologia","Anestesiologia"], ["Angiorradiologista","Angiorradiologista"]], id: "home_type", prompt: "Select...", class: "form-control" %>
						</div>
					</div> 

					<div class="col-md-4 select">
						<div class="form-group">
							<label>Especialidade adicional</label>
							<%= f.select :accommodate, [["Acunputura","Acunputura"], ["Alergista","Alergista"], ["Anestesiologia","Anestesiologia"], ["Angiorradiologista","Angiorradiologista"]], id: "home_type", prompt: "Select...", class: "form-control" %>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="form-group">
						<label>Telefone</label>
						<%= f.text_field :bed_room, placeholder: "", class: "form-control" %>
					</div>
				</div>


				<div class="row">
					<div class="form-group">
						<label>Número de Conselho</label>
						<%= f.text_field :bath_room, placeholder: "", class: "form-control" %>
					</div>
				</div>

				<div class="row">
					<div class="form-group">
						<label>Informações profissionais</label>
						<%= f.text_area :listing_name, rows: 5, placeholder: "Digite dados sobre seu atendimento", class: "form-control" %>
					</div>
				</div>

				<div class="row">
					<div class="form-group">
						<label>Experiencia profissional</label>
						<%= f.text_area :summary, rows: 5, placeholder: "Aonde se formou, filiaçoes profissionais", class: "form-control" %>
					</div>
				</div>

				<div class="row">
					<div class="form-group">
						<label>Endereço</label>
						<%= f.text_field :address, placeholder: "", class: "form-control" %>
					</div>
				</div>

<!-- 				<div class="row">
					<div class="col-md-4">
						<div class="form-group">
							<%= f.check_box :is_tv %> TV
						</div>
						<div class="form-group">
							<%= f.check_box :is_kitchen %> Kitchen
						</div>
						<div class="form-group">
							<%= f.check_box :is_internet %> Internet
						</div>
					</div>

					<div class="col-md-4">
						<div class="form-group">
							<%= f.check_box :is_heating %> Heating
						</div>
						<div class="form-group">
							<%= f.check_box :is_air %> Air Conditioning
						</div>
					</div>	
				</div>	 -->

				<div class="row">
					<div class="col-md-4">
						<div class="form-group">
							<label>Preço</label>
							<div class="input-group">
								<div class="input-group-addon">$</div>
								<%= f.text_field :price, placeholder: "eg. $100", class: "form-control" %>
							</div>	
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-4">
						<div class="form-group">							
							<span class="btn btn-default btn-file">
							    <i class="fa fa-cloud-upload fa-lg"></i> Enviar Fotos 
							    <%= file_field_tag "images[]", type: :file, multiple: true %>
							</span>
						</div>		
					</div>
				</div>

				<div id="photos"><%= render 'photos/list' %></div>								

				<div class="row">
					<div class="form-group">
						<%= f.check_box :active %> Ativar
					</div>
				</div>

				<div class="actions">
					<%= f.submit "Enviar", class: "btn btn-primary" %>
				</div>

			<% end %>

		</div>
	</div>
</div>